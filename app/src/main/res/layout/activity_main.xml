<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.jatingarg.section5.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/playBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cameraBtn"
            android:layout_alignBottom="@+id/cameraBtn"
            android:layout_marginStart="43dp"
            android:layout_toEndOf="@+id/cameraBtn"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Play Media"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cameraBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Launch Camera"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>
